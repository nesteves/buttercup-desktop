{
  "parser": "babel-eslint",
  "plugins": [
    "jsx-control-statements"
  ],
  "extends": [
    "standard",
    "standard-react",
    "plugin:jsx-control-statements/recommended",
    "prettier"
  ],
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "react/jsx-no-undef": [
      2,
      {
        "allowGlobals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "jsx-quotes": "off",
    "comma-dangle": "off",
    "jsx-control-statements/jsx-use-if-tag": 0,
    "jsx-control-statements/jsx-jcs-no-undef": "off"
  }
}
